<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativelayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

<TextView
        android:id="@+id/bodytext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ci_input_modal_dialog_07_list01_row01_text_x1"
        android:layout_marginTop="@dimen/ci_input_modal_dialog_07_list01_row01_text_y1"
        style="@style/ci_input_modal_dialog_08_description_text_style" />
 
 
    <EditText
        android:id="@+id/numericentry"
        android:layout_width="@dimen/ci_input_modal_dialog_08_text_field_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ci_input_modal_dialog_08_text_field_x1"
        android:layout_marginTop="@dimen/ci_input_modal_dialog_08_text_field_y1"
        style="@style/ci_input_modal_dialog_08_description_text_style"
        >
        <requestFocus />
    </EditText>
    
 </RelativeLayout>